doctype html
html(lang="ko")
    head
        //- Blog의 주제에 meta 정보를 특화시킴

        //- Global site tag (gtag.js) - Google Analytics
        script(async src="https://www.googletagmanager.com/gtag/js?id=G-9SVY2KLBTZ")
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-9SVY2KLBTZ');

        //- Meta
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        meta(name="theme-color" content="#2e394d")
        meta(name="author" content="솔톤세무회계")
        meta(name="title" content=`${pageTitle} | ${siteName}`)
        meta(name="description" content=`${metaDescription}`)
        meta(name="keywords" content= ` ${metaKeywords}, 여의도 세무사, 샛강 세무사, 영등포 세무사, 마포 세무사, 서울 세무사`)
        

        //- Robots
        meta(name="robots" content="index, follow")

        //- Search
        link(rel="canonical" href=`https://soltonetax.com${canonicalUrl}`)

        //- Open Graph protocol
        meta(property="og:title" content=`${pageTitle} | ${siteName}`)
        meta(property="og:type" content="website")
        meta(property="og:image" content=`${ogImageUrl}`)
        meta(property="og:image:alt" content="내 손 안의 세무 파트너 솔톤")
        meta(property="og:description" content=`${metaDescription}`)
        meta(property="og:url" content=`https://soltonetax.com${canonicalUrl}`)
        meta(property="og:locale" content="ko_KR")
        meta(property="og:site_name" content="솔톤세무회계")

        //- Styles
        link(rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap")
        link(rel="stylesheet" type="text/css" href="/static/styles.css")

        //- Favicon & Title
        link(rel="shortcut icon" href="https://soltonetax.com/favicon.ico")
        title #{pageTitle} : #{siteName}
            
    body
        include ../partials/header
        main
            block content
        include ../partials/footer

        button.topBtn(title= "Go to top") Top
        
        script(src="/static/main.js")


        //- Naver Analytics
        script(type="text/javascript" src="//wcs.naver.net/wcslog.js")
        script.
            if(!wcs_add) var wcs_add = {};
            wcs_add["wa"] = "9eaa3501e4e0d0";
            if(window.wcs) {
                wcs_do();
            }
        