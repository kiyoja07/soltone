        link(rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap")
        link(rel="stylesheet" type="text/css" href="/static/styles.css")

        //- Favicon & Title
        link(rel="shortcut icon" href="https://soltonetax.com/favicon.ico")
        //- link(rel="shortcut icon" type="image/png" href="https://kr.object.ncloudstorage.com/soltone/images/favicon_soltone.png")
        if canonicalUrl == "/"
            title #{siteName}
        else
            title #{pageTitle} : #{siteName}
        
